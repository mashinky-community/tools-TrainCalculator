<Window x:Class="MashinkyCalculator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MashinkyCalculator"
        mc:Ignorable="d"
        Title="About" Height="400" Width="450" Background ="#38372e" WindowStartupLocation="CenterScreen" FontSize="14" Foreground="#f1edca">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="CloseButton" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Close" Width="50" Foreground="#f1edca" Background="#25261e" Click="CloseButton_Click"></Button>
        <TextBlock x:Name="AppInfo" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Grid.Row="0">
            Mashinky Train Calculator <LineBreak/>
            version 1.0 <LineBreak/>
            created by Helios21cz <LineBreak/>
            2021
        </TextBlock>
        <TextBlock x:Name="Contributions" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Grid.Row="1" FontSize="18">
             Thanks to <LineBreak/>
        <TextBlock FontSize="14" TextAlignment="Left">
        Jan Zelený - for creating this amazing game and <LineBreak/> allowing me to create this app <LineBreak/>
            JTrucker - testing and design help <LineBreak/>
            Hračička - testing and design help <LineBreak/>
            strjan - testing
        </TextBlock>
        </TextBlock>
        <TextBlock x:Name="PlannedFeatures" HorizontalAlignment="Center" VerticalAlignment="top" Grid.Row="2" FontSize="18" TextAlignment="Center">
            Planned features<LineBreak/>
        <TextBlock FontSize="14">
            Saving/Loading train templates<LineBreak/>            
            Multiple languages<LineBreak/>
            (maybe) Some fancy graphics<LineBreak/>
        </TextBlock>
            </TextBlock>
    </Grid>
</Window>
